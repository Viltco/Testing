<odoo>

    <record model="ir.ui.view" id="mrp_production_form_inh">
        <field name="name">mrp.production.form.inh</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='company_id']" position="after">
                <field name="picking_for_id" string="Requisite For"/>
                <field name="show_create_in" invisible="1"/>
                <field name="is_child_mo_created" invisible="1"/>
                <field name="allowed_product_ids" invisible="1"/>
            </xpath>

<!--            <xpath expr="//header" position="inside">-->
<!--                <button string="Create Internal Transfer" type="object" name="action_create_internal_transfer" class="oe_highlight" attrs="{'invisible': ['|', ('show_create_in', '=', False), ('state', 'not in', ['confirmed', 'progress'])]}"/>-->
<!--            </xpath>-->

            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button type="object" name="action_view_transfers" class="oe_stat_button" icon="fa-truck" attrs="{'invisible': [('transfer_count', '=', 0)]}">
                    <field name="transfer_count" widget="statinfo" string="Transfers"/>
                </button>

                <button type="object" name="action_view_child_mo" class="oe_stat_button" icon="fa-truck" attrs="{'invisible': [('child_mo_count', '=', 0)]}">
                    <field name="child_mo_count" widget="statinfo" string="Child MRP's"/>
                </button>

            </xpath>

        </field>
    </record>

</odoo>